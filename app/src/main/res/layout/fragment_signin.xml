<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SigninFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:drawableEnd="@drawable/ic_mail_outline_blue_24dp"
            android:background="@drawable/rounded_edittext"
            android:padding="@dimen/activity_horizontal_margin"
            android:inputType="textEmailAddress"
            android:layout_marginVertical="@dimen/margin_small"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:drawableEnd="@drawable/ic_lock_outline_blue_24dp"
            android:background="@drawable/rounded_edittext"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_sign_in"
            android:textColor="@color/white"
            android:background="@drawable/custom_bluebutton"
            android:layout_gravity="right"/>
    </LinearLayout>

</FrameLayout>