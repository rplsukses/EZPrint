<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:id="@+id/item_order_cardView"
    android:layout_marginBottom="@dimen/margin_small">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">
        <com.rplsukses.ezprint.ui.custom.SquareCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <ImageView
                android:id="@+id/item_order_ivIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_med"
                app:srcCompat="@drawable/ic_toko"
                android:scaleType="centerCrop"/>
        </com.rplsukses.ezprint.ui.custom.SquareCardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:padding="@dimen/margin_small">
            <TextView
                android:id="@+id/item_order_tvMitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vt323"
                android:textSize="@dimen/text_big"
                android:textColor="@color/primary_light"
                android:text="@string/tab_location"
                android:layout_marginBottom="@dimen/margin_small"/>
            <TextView
                android:id="@+id/item_order_tvFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama File"
                android:textSize="@dimen/text_big"
                android:fontFamily="@font/vt323"
                android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:id="@+id/item_order_tvTgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12 Desember 2018"
                    android:textSize="@dimen/text_small"/>
                <TextView
                    android:id="@+id/item_order_tvstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"
                    android:text="Status"
                    android:textColor="@color/text_error"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/vt323"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>